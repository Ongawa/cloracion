<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import layouttests.migfxml.sample1.*?>
<?import javafx.scene.layout.GridPane?>


<MigPane id="rootPane"
    fx:controller="org.ongawa.peru.chlorination.gui.manage.ChlorinationWindow"
    styleClass="main-panel" layout="insets 20" cols="[label, pref!][grow, 50::]"
    rows="" xmlns:fx="http://javafx.com/fxml">
    <GridPane id="mainPane" hgap="10" vgap="10" layoutX="20"
        layoutY="20" styleClass="main-panel" xmlns:fx="http://javafx.com/fxml">

        <Label text="Parametros de Diseño" GridPane.columnIndex="0"
            GridPane.rowIndex="0" />
        <GridPane id="Parameters" hgap="10" vgap="10" layoutX="20"
            layoutY="20" styleClass="main-panel" xmlns:fx="http://javafx.com/fxml"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.columnSpan="8">
            <!-- Left 'column' -->
            <Label text="Caudal Natura" GridPane.columnIndex="0"
                GridPane.rowIndex="0" />
            <TextField fx:id="naturalCaudal" id="naturalCaudal"
                GridPane.columnIndex="1" GridPane.rowIndex="0"
                GridPane.columnSpan="2" />
            <Label text="Litros / seg" GridPane.columnIndex="3"
                GridPane.rowIndex="0" />

            <Label text="Caudal a clorar" GridPane.columnIndex="0"
                GridPane.rowIndex="1" />
            <TextField fx:id="chlorableCaudal" id="chlorableCaudal"
                GridPane.columnIndex="1" GridPane.rowIndex="1"
                GridPane.columnSpan="2" />
            <Label text="Litros / seg" GridPane.columnIndex="3"
                GridPane.rowIndex="1" />

            <Label text="Pureza del cloro" GridPane.columnIndex="0"
                GridPane.rowIndex="2" />
            <TextField fx:id="clPurity" id="clPurity"
                GridPane.columnIndex="1" GridPane.rowIndex="2"
                GridPane.columnSpan="2" />
            <Label text="" GridPane.columnIndex="3"
                GridPane.rowIndex="2" />

            <Label text="Volumen del tanque" GridPane.columnIndex="0"
                GridPane.rowIndex="3" />
            <TextField fx:id="tankVolume" id="tankVolume"
                GridPane.columnIndex="1" GridPane.rowIndex="3"
                GridPane.columnSpan="2" />
            <Label text="Litros" GridPane.columnIndex="3"
                GridPane.rowIndex="3" />

            <Label text="Tiempor de recarga" GridPane.columnIndex="0"
                GridPane.rowIndex="4" />
            <TextField fx:id="rechargeTime" id="rechargeTime"
                GridPane.columnIndex="1" GridPane.rowIndex="4"
                GridPane.columnSpan="2" />
            <Label text="Días" GridPane.columnIndex="3"
                GridPane.rowIndex="4" />

            <!-- Rigth 'column' -->
            <Label text="Horas de goteo diario"
                GridPane.columnIndex="5" GridPane.rowIndex="0" />
            <TextField fx:id="dripRate" id="dripRate"
                GridPane.columnIndex="6" GridPane.rowIndex="0"
                GridPane.columnSpan="2" />
            <Label text="Gotas" GridPane.columnIndex="3"
                GridPane.rowIndex="4" />

            <Label text="Demanda de cloro" GridPane.columnIndex="5"
                GridPane.rowIndex="1" />
            <TextField fx:id="clDemand" id="clDemand"
                GridPane.columnIndex="6" GridPane.rowIndex="1"
                GridPane.columnSpan="2" />
        </GridPane>
    </GridPane>
</MigPane>

