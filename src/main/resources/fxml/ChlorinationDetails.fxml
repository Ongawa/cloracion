<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.GridPane?>

<ScrollPane id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity"
    minHeight="-Infinity" minWidth="-Infinity" prefHeight="700"
    prefWidth="1000" styleClass="main-panel" xmlns:fx="http://javafx.com/fxml/1"
    xmlns="http://javafx.com/javafx/8" fx:controller="org.ongawa.peru.chlorination.gui.manage.ChlorinationWindow">
    <content>
        <GridPane id="mainPane" hgap="10" layoutX="20" layoutY="20"
            styleClass="main-panel" vgap="10" xmlns:fx="http://javafx.com/fxml">
            <children>

                <!-- Input values (some of them can be prefilled) -->
                <Label text="Parametros de Diseño"
                    GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <GridPane id="Parameters" hgap="10" layoutX="20"
                    layoutY="20" styleClass="main-panel" vgap="10"
                    GridPane.columnIndex="0" GridPane.columnSpan="8"
                    GridPane.rowIndex="1" GridPane.rowSpan="5"
                    xmlns:fx="http://javafx.com/fxml">
                    <children>
                        <!-- Left 'column' -->
                        <Label text="Caudal Natural"
                            GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField id="naturalCaudal" fx:id="naturalCaudal"
                            GridPane.columnIndex="1"
                            GridPane.columnSpan="2" GridPane.rowIndex="0" />
                        <Label text="Litros / seg"
                            GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <Button id="naturalCaudalInfo" onAction="#triggerInfo"
                            GridPane.columnIndex="4" GridPane.rowIndex="0">
                            <graphic>
                                <ImageView fitHeight="20.0"
                                    fitWidth="20.0" pickOnBounds="true"
                                    preserveRatio="true">
                                    <image>
                                        <Image url="img/info.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Label text="Caudal a clorar"
                            GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField id="chlorableCaudal" fx:id="chlorableCaudal"
                            GridPane.columnIndex="1"
                            GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <Label text="Litros / seg"
                            GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Pureza del cloro"
                            GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField id="clPurity" fx:id="clPurity"
                            GridPane.columnIndex="1"
                            GridPane.columnSpan="2" GridPane.rowIndex="2" />
                        <Label text="" GridPane.columnIndex="3"
                            GridPane.rowIndex="2" />

                        <Label text="Volumen del tanque"
                            GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField id="tankVolume" fx:id="tankVolume"
                            GridPane.columnIndex="1"
                            GridPane.columnSpan="2" GridPane.rowIndex="3" />
                        <Label text="Litros" GridPane.columnIndex="3"
                            GridPane.rowIndex="3" />

                        <Label text="Tiempo de recarga"
                            GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField id="rechargeTime" fx:id="rechargeTime"
                            GridPane.columnIndex="1"
                            GridPane.columnSpan="2" GridPane.rowIndex="4" />
                        <Label text="Días" GridPane.columnIndex="3"
                            GridPane.rowIndex="4" />

                        <!-- Rigth 'column' -->
                        <Label text="Horas de goteo diario"
                            GridPane.columnIndex="5"
                            GridPane.columnSpan="2" GridPane.rowIndex="0" />
                        <TextField id="dripRate" fx:id="dripRate"
                            GridPane.columnIndex="7" GridPane.rowIndex="0" />
                        <Label text="Gotas" GridPane.columnIndex="8"
                            GridPane.rowIndex="0" />

                        <Label text="Demanda de cloro"
                            GridPane.columnIndex="5"
                            GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <TextField id="clDemand" fx:id="clDemand"
                            GridPane.columnIndex="7" GridPane.rowIndex="1" />
                        <Label text="mg/l" GridPane.columnIndex="8"
                            GridPane.rowIndex="1" />
                    </children>
                </GridPane>
                <Button id="triggerCalculation" onAction="#triggerCalculation"
                    text="Calcular" GridPane.columnIndex="7"
                    GridPane.rowIndex="6" />

                <!-- Results -->
                <Label text="Resultados" GridPane.columnIndex="0"
                    GridPane.rowIndex="7" />
                <GridPane id="resultsGrid" hgap="10" layoutX="20"
                    layoutY="20" styleClass="main-panel" vgap="10"
                    GridPane.columnIndex="0" GridPane.columnSpan="8"
                    GridPane.rowIndex="8" GridPane.rowSpan="3"
                    xmlns:fx="http://javafx.com/fxml">
                    <children>
                        <!-- Chlorine Content -->
                        <Label text="Contenido de cloro"
                            GridPane.columnIndex="0"
                            GridPane.columnSpan="2" GridPane.rowIndex="0" />
                        <Label text="gr/día" GridPane.columnIndex="2"
                            GridPane.columnSpan="2" GridPane.rowIndex="0" />
                        <Label text="kg/quincena"
                            GridPane.columnIndex="4"
                            GridPane.columnSpan="2" GridPane.rowIndex="0" />
                        <Label text="kg/mes" GridPane.columnIndex="6"
                            GridPane.columnSpan="2" GridPane.rowIndex="0" />

                        <!-- Drip rate -->
                        <Label text="Caudal de goteo"
                            GridPane.columnIndex="0"
                            GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <Label text="gotas/seg"
                            GridPane.columnIndex="2"
                            GridPane.columnSpan="2" GridPane.rowIndex="2" />
                        <Label text="ml/seg" GridPane.columnIndex="4"
                            GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <Label text="litros/min"
                            GridPane.columnIndex="6"
                            GridPane.columnSpan="2" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
                <Button id="triggerPrint" onAction="#triggerSave"
                    text="Imprimir" GridPane.columnIndex="6"
                    GridPane.rowIndex="11" />
                <Button id="triggerSave" onAction="#triggerSave"
                    text="Guardar" GridPane.columnIndex="7"
                    GridPane.rowIndex="11" />
            </children>
        </GridPane>
    </content>
</ScrollPane>
